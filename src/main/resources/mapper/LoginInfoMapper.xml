<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.wares.commodity.mapper.LoginInfoMapper">
  <resultMap id="BaseResultMap" type="cn.wares.commodity.entity.LoginInfo">
    <result column="id" property="id" />
    <result column="login_name" property="loginName" />
    <result column="login_date" property="loginDate" />
  </resultMap>

  <!-- 表字段 -->
  <sql id="baseColumns">
         t.id
        , t.login_name
        , t.login_date
        </sql>

  <!-- 查询全部 -->
  <select id="listAll" resultMap="BaseResultMap">
    SELECT
    <include refid="baseColumns" />
    FROM login_info t
  </select>

  <!-- 根据主键获取单条记录 -->
  <select id="getById" resultMap="BaseResultMap" parameterType="Integer">
    SELECT
    <include refid="baseColumns" />
    FROM login_info t
    WHERE id = #{id}
  </select>

  <!-- 插入全部字段 -->
  <insert id="insert" parameterType="cn.wares.commodity.entity.LoginInfo"
          keyProperty="id" keyColumn="id" useGeneratedKeys="true"
  >
    INSERT INTO login_info
    <trim prefix="(" suffix=")" suffixOverrides=",">
      login_name,
      login_date,
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      #{loginName},
      #{loginDate},
    </trim>
  </insert>

  <!-- 插入不为NULL的字段 -->
  <insert id="insertIgnoreNull" parameterType="cn.wares.commodity.entity.LoginInfo"
          keyProperty="id" keyColumn="id" useGeneratedKeys="true"
  >
    INSERT INTO login_info
    <trim prefix="(" suffix=")" suffixOverrides=",">

      <if test="loginName != null">
        login_name,
      </if>
      <if test="loginDate != null">
        login_date,
      </if>
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      <if test="loginName != null" >
        #{loginName},
      </if>
      <if test="loginDate != null" >
        #{loginDate},
      </if>
    </trim>
  </insert>

  <!-- 更新,更新全部字段 -->
  <update id="update" parameterType="cn.wares.commodity.entity.LoginInfo">
    UPDATE login_info
    <set>
      login_name=#{loginName},
      login_date=#{loginDate},
    </set>
    WHERE id = #{id}
  </update>


  <!-- 更新不为NULL的字段 -->
  <update id="updateIgnoreNull" parameterType="cn.wares.commodity.entity.LoginInfo">
    UPDATE login_info
    <set>
      <if test="loginName != null" >
        login_name=#{loginName},
      </if>
      <if test="loginDate != null" >
        login_date=#{loginDate},
      </if>
    </set>
    WHERE id = #{id}
  </update>

</mapper>